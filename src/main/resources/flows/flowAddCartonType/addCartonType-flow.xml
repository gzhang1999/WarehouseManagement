<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <on-start>
        <evaluate expression="cartonTypeFlowHandler.init()"
                  result="flowScope.cartonTypeFlowModel" />
    </on-start>

    <view-state id="addCartonType" view="outbound/cartontype/information" model="flowScope.cartonTypeFlowModel">
        <on-render>
            <set name="viewScope.applicationID" value="'Outbound'" type="java.lang.String"></set>
            <set name="viewScope.formID" value="'CartonType'" type="java.lang.String"></set>
            <set name="viewScope.flowID" value="'CartonType.new'" type="java.lang.String"></set>
        </on-render>
        <transition on="confirmCartonType" to="confirmCartonType" >
            <evaluate expression="cartonTypeFlowHandler.saveCartonType(flowScope.cartonTypeFlowModel, requestParameters, externalContext.nativeRequest.session, messageContext)" />
        </transition>
        <transition on="previous"  to="home" />
    </view-state>

    <view-state id="confirmCartonType" view="outbound/cartontype/confirm"  model="flowScope.cartonTypeFlowModel">
        <on-render>
            <set name="viewScope.applicationID" value="'Outbound'" type="java.lang.String"></set>
            <set name="viewScope.formID" value="'CartonType'" type="java.lang.String"></set>
            <set name="viewScope.flowID" value="'CartonType.new'" type="java.lang.String"></set>
        </on-render>
        <transition on="serializeCartonType"  to="serializeCartonType" />
        <transition on="previous"  to="addCartonType" />
    </view-state>
    <action-state id="serializeCartonType">
        <evaluate expression="cartonTypeFlowHandler.serializeCartonType(flowScope.cartonTypeFlowModel)" />
        <transition to="success" />
    </action-state>

    <!-- end state -->
    <end-state id="success" view="externalRedirect:contextRelative:/outbound/cartontype?id=#{flowScope.cartonTypeFlowModel.cartonType.id}" />
    <end-state id="home" view="externalRedirect:contextRelative:/outbound/cartontype" />

    <!-- Global Transition -->
    <global-transitions>
        <transition on="home" to="home" validate="false" />
    </global-transitions>



</flow>