<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <!-- returning and adding inside flow addLocationFlowModel instance -->
    <input name="putawaypolicyid"/>
    <on-start>
        <evaluate expression="putawayFlowHandler.init(putawaypolicyid)"
                  result="flowScope.putawayFlowModel" />
    </on-start>

    <view-state id="putaway" view="inbound/putaway/policy/putaway" model="flowScope.putawayFlowModel">
        <on-render>
            <set name="viewScope.applicationID" value="'Inbound'" type="java.lang.String"></set>
            <set name="viewScope.formID" value="'Putaway'" type="java.lang.String"></set>
            <set name="viewScope.flowID" value="'Putaway.Putaway'" type="java.lang.String"></set>
        </on-render>
        <transition on="success"  to="success" />
    </view-state>

    <!-- end state -->
    <end-state id="success" view="externalRedirect:contextRelative:/inbound/putaway/policy?id=#{flowScope.putawayFlowModel.putawayPolicy.id}" />
    <end-state id="home" view="externalRedirect:contextRelative:/inbound/putaway/policy" />

    <!-- Global Transition -->
    <global-transitions>
        <transition on="home" to="home" validate="false" />
    </global-transitions>



</flow>